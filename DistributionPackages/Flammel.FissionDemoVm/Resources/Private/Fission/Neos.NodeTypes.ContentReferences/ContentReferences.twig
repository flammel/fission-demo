{% set node = props.node %}

<div {{ fission().nodeRoot(node) }}>
    {% for reference in node.prop("references") %}
        {{ node(reference) }}
    {% else %}
        {% if fission().backend().active %}
            <p>{{ fission().translate("content.noReferencesSelected", "Neos.NodeTypes.ContentReferences", "NodeTypes/ContentReferences") }}</p>
        {% endif %}
    {% endfor %}
</div>
